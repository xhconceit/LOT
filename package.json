{
  "name": "lot",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --filter './apps/*' --ui=tui",
    "dev:api": "turbo dev --filter '@lot/api-service' --ui=tui",
    "dev:admin": "turbo dev --filter '@lot/admin-web' --ui=tui",
    "fmt": "oxfmt --write .",
    "lint": "oxlint .",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@types/node": "^25.3.2",
    "@vitest/coverage-istanbul": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "oxfmt": "^0.35.0",
    "oxlint": "latest",
    "turbo": "latest",
    "typescript": "catalog:",
    "vitest": "latest"
  },
  "packageManager": "pnpm@10.26.2",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
